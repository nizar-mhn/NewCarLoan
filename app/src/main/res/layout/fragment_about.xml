<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textViewDeveloper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Developed by: NIZ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="52dp"
        android:layout_height="17dp"
        android:layout_marginBottom="16dp"
        android:text="Version:"
        app:layout_constraintBottom_toTopOf="@+id/textViewVersion"
        app:layout_constraintEnd_toEndOf="@+id/textViewVersion"
        app:layout_constraintStart_toStartOf="@+id/textViewVersion" />

    <TextView
        android:id="@+id/textViewVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="TextViewVersion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewTnc"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/min_height"
        android:layout_marginTop="120dp"
        android:clickable="true"
        android:text="Terms And Condition"
        android:textColor="@android:color/holo_blue_bright"
        app:layout_constraintEnd_toEndOf="@+id/textViewDeveloper"
        app:layout_constraintStart_toStartOf="@+id/textViewDeveloper"
        app:layout_constraintTop_toBottomOf="@+id/textViewDeveloper" />

</androidx.constraintlayout.widget.ConstraintLayout>